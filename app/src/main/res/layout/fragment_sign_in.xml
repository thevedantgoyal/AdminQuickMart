<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".auth.signInFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="@dimen/_320sdp"
                android:layout_height="@dimen/_300sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_prod"
                tools:ignore="ContentDescription,ImageContrastCheck" />

            <ImageView
                android:id="@+id/iconImg"
                android:layout_width="@dimen/_64sdp"
                android:layout_height="@dimen/_64sdp"
                android:layout_gravity="center"
                android:src="@drawable/quickmart_logo"
                android:layout_marginTop="@dimen/_10sdp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="India\'s last minute ago"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textColor="#000000"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:text="Login or SignUp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                tools:ignore="HardcodedText" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:boxCornerRadiusBottomEnd="16.90dp"
                app:boxCornerRadiusTopStart="16.90dp"
                app:boxCornerRadiusTopEnd="16.90dp"
                app:boxCornerRadiusBottomStart="16.90dp"
                app:endIconMode="clear_text"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/phone_icon"
                    android:drawablePadding="@dimen/_12sdp"
                    android:hint="Enter Mobile Number"
                    android:inputType="number"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,VisualLintTextFieldSize" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginBtn"
                app:cornerRadius="18.40dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="26.00dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:backgroundTint="#8d99ae"
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                tools:ignore="HardcodedText,VisualLintButtonSize,TextContrastCheck" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>