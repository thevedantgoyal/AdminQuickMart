<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2.60dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvProduct"
        android:layout_width="match_parent"
        android:layout_height="286.00dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/white"
        android:elevation="0dp"
        app:cardCornerRadius="13.00dp"
        app:cardPreventCornerOverlap="false"
        android:background="@drawable/bg_category"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="13.00dp"
            >

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imageSlider"
                android:layout_width="wrap_content"
                android:layout_height="156.00dp"
                app:iss_auto_cycle="false"
                app:iss_text_align="CENTER"
                />
            
            <TextView
                android:id="@+id/tvProductTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:text="Nandine Toned Fresh Milk alda aloie alda efe"
                android:textColor="@color/black"
                android:textSize="19.50dp"
                android:textStyle="bold"
                android:fontFamily="@font/averia_gruesa_libre"
                />

             <TextView
                 android:id="@+id/tvProductQuantity"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="500 ML"
                 android:textColor="#6f6f6f"
                 android:textStyle="bold"
                 android:layout_marginTop="@dimen/_6sdp"
                 android:textSize="@dimen/_11ssp"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_6sdp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvProductPrice"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="$25"
                        android:textStyle="bold"
                        android:textSize="16.60dp"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:id="@+id/tvProductEdit"
                        android:layout_width="78.00dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/bg_edit"
                        android:gravity="center"
                        android:padding="5.20dp"
                        android:text="Edit"
                        android:textColor="@color/green"
                        android:textSize="15.00dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        tools:ignore="TextSizeCheck" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>